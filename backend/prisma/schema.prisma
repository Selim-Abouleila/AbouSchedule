datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  role     Role
  tasks    Task[]
}

model Task {
  id        Int       @id @default(autoincrement())
  title     String
  priority  Priority
  status    Status    @default(PENDING)
  dueAt     DateTime?
  user      User?     @relation(fields: [userId], references: [id])
  userId    Int?
  createdAt DateTime  @default(now())
}

enum Role {
  ADMIN
  EMPLOYEE
}

enum Priority {
  IMMEDIATE
  RECURRENT
  ONE
  TWO
  THREE
  NONE
}

enum Status {
  PENDING
  ACTIVE
  DONE
}

